<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to create follow-up sessions -->
        <record id="ir_cron_create_followup_sessions" model="ir.cron">
            <field name="name">iN-Clue: Create Follow-up Sessions</field>
            <field name="model_id" ref="model_inclue_participant"/>
            <field name="state">code</field>
            <field name="code">model.cron_create_followup_sessions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall" eval="False"/>
        </record>
        
        <!-- Cron job to send reminder emails -->
        <record id="ir_cron_send_survey_reminders" model="ir.cron">
            <field name="name">iN-Clue: Send Survey Reminders</field>
            <field name="model_id" ref="model_inclue_participant"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="cron_pre_session_reminders" model="ir.cron">
            <field name="name">iN-Clue: Send Pre-Session Reminders</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="state">code</field>
            <field name="code">model.send_pre_session_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
            <!-- Run at 9 AM every day -->
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=9, minute=0, second=0)"/>
        </record>

    </data>
</odoo>